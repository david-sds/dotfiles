export PS1='> \[\e[34m\]\W \[\e[0m\]$(__git_ps1 "\[\e[32m\](\[\e[31m\]%s\[\e[32m\])\[\e[0m\]")\[\e[37m\]\$\[\e[0m\] '

export EDITOR=vim
export VISUAL=vim
export TERMINAL="alacritty"
export CHROME_EXECUTABLE=/usr/bin/google-chrome-stable
export OPENROUTER_API_KEY="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"
export GEMINI_API_KEY="AIzaSyAp3SDiPy3JL1ZWgBoUI8K8JrXpm2d4KEg"

export PATH="$HOME/fvm/default/bin:$HOME/fvm/default/bin/cache/dart-sdk/bin/:$PATH"
export PATH="$HOME/.local/share/nvim/mason/bin:$PATH"

# NVM Config
source /usr/share/nvm/init-nvm.sh

# SDKMAN Config (Must be at the end of the file)
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"
