{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "bash": {
      "*": "ask",
      "ls *": "allow",
      "pwd": "allow",
      "whoami": "allow",
      "hostname": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "find *": "allow"
    }
  },
  "keybinds": {
    "app_exit": "<leader>d",
    "input_delete_to_line_end": "ctrl+shift+k",
    "input_delete_to_line_start": "ctrl+shift+u",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}
